# SportBooking Web Application Environment Configuration

# =============================================================================
# WEB APPLICATION SETTINGS
# =============================================================================

# Web application port (default: 80)
WEB_PORT=80

# Nginx server name (your domain or localhost)
NGINX_SERVER_NAME=courtic.ir

# Maximum client body size for file uploads
NGINX_CLIENT_MAX_BODY_SIZE=500M

# =============================================================================
# API CONFIGURATION
# =============================================================================

# API base URL (backend server)
API_BASE_URL=https://api.courtic.ir/

# =============================================================================
# PROXY SETTINGS (Optional)
# =============================================================================

# Enable nginx proxy (set to true to use nginx-proxy service)
ENABLE_PROXY=false

# Proxy port (default: 8080)
PROXY_PORT=8080

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================

# Node environment
NODE_ENV=production

# Enable debug mode
DEBUG=false

# =============================================================================
# SECURITY SETTINGS
# =============================================================================

# Enable HTTPS (requires SSL certificates)
ENABLE_HTTPS=false

# SSL certificate path (if using HTTPS)
SSL_CERT_PATH=/etc/ssl/certs/cert.pem

# SSL key path (if using HTTPS)
SSL_KEY_PATH=/etc/ssl/private/key.pem

# =============================================================================
# LOGGING SETTINGS
# =============================================================================

# Log level (error, warn, info, debug)
LOG_LEVEL=info

# Enable access logs
ENABLE_ACCESS_LOGS=true

# =============================================================================
# MONITORING SETTINGS
# =============================================================================

# Enable health checks
ENABLE_HEALTH_CHECK=true

# Health check interval (seconds)
HEALTH_CHECK_INTERVAL=30
